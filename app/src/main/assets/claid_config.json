{
  "hosts": [
    {
      "hostname": "Server",
      "server_config": {
        "host_server_address": "adamma.ethz.ch:1337"
      },
      "modules": [
        {
          "type": "DataReceiverModule",
          "id": "DataReceiver",
          "input_channels": {
            "FromDataSyncModuleChannel":
            "DataSyncToDataReceiver"
          },
          "output_channels": {
            "ToDataSyncModuleChannel":
            "DataReceiverToDataSync"
          }
        }
      ]
    },
    {
      "hostname": "Smartwatch",
      "modules": [
        {
          "type": "BatteryCollector",
          "id": "MyBatteryCollector",
          "properties": {
            "samplingSchedule": {
              "periodic": [
                {
                  "period_seconds": 600
                }
              ]
            }
          },
          "output_channels": {
            "BatteryData": "MyBatteryChannel"
          }
        },
        {
          "type": "GalaxyWatchCollector",
          "id": "GalaxyWatchCollector",
          "output_channels": {
            "AccelerationData" : "Channel_Name_for_Acceleration_Data"
          },
          "properties": {
            "enableAccelerometer" : true
          }
        },
        {
          "type": "GalaxyWatchCollector",
          "id": "GalaxyWatchCollector",
          "output_channels": {
            "HeartRateData" : "Channel_Name_for_Heartrate_Data"
          },
          "properties": {
            "enableHeartRate" : true
          }
        },
        {
          "type": "DataSaverModule",
          "id": "MyDataSaverModule",
          "properties": {
            "storagePath": "%media_dir/files",
            "fileNameFormat": "%d.%m.%y/battery_data_%H-%M-%S.json",
            "fileType": "json",
            "overrideExistingFiles": false
          },
          "input_channels": {
            "DataChannel": "MyBatteryChannel"
          }
        },
        {
          "type": "DataSaverModule",
          "id": "MyDataAccelSaverModule",
          "properties": {
            "storagePath": "%media_dir/files",
            "fileNameFormat": "%d.%m.%y/accel_data_%H-%M-%S.bin",
            "fileType": "batch_binary",
            "overrideExistingFiles": false
          },
          "input_channels": {
            "DataChannel": "AccelerationData"
          }
        },
        {
          "type": "DataSaverModule",
          "id": "MyDataAccelSaverModule",
          "properties": {
            "storagePath": "%media_dir/files",
            "fileNameFormat": "%d.%m.%y/heart_data_%H-%M-%S.bin",
            "fileType": "batch_binary",
            "overrideExistingFiles": false
          },
          "input_channels": {
            "DataChannel": "HeartRateData"
          }
        }
      ]
    }

  ]
}
